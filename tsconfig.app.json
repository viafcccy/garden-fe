{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@img/*": [
        "src/assets/img/*"
      ],
      "@less/*": [
        "src/assets/less/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ],
      "@cp/*": [
        "src/components/*"
      ],
      "@views/*": [
        "src/views/*"
      ]
    },
  }
}
